<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick your Settings"
        android:textColor="@color/fab_material_white"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/dialog_single_tv"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="REPS"
            android:textColor="@color/colorNumberPickerSelected"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="14dp"/>
        <com.shawnlin.numberpicker.NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/fab_material_white"
            app:np_max="100"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorNumberPickerSelected"
            app:np_textColor="@color/fab_material_white"
            app:np_value="10"
            app:np_fadingEdgeEnabled="false"
            app:np_dividerThickness="1dp"
            android:id="@+id/number_picker_reps"/>



        <View
            android:layout_width="20dp"
            android:layout_height="10dp"/>



        <com.shawnlin.numberpicker.NumberPicker

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/fab_material_white"
            app:np_max="20"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorNumberPickerSelected"
            app:np_textColor="@color/fab_material_white"
            app:np_value="4"
            app:np_fadingEdgeEnabled="false"
            app:np_dividerThickness="1dp"
            android:id="@+id/number_picker_sets"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:text="SETS"
            android:textColor="@color/colorNumberPickerSelected"
            android:textSize="12dp"
            android:layout_marginLeft="14dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/fab_material_white"
            android:id="@+id/input_form_dialog_choose_setsreps"/>
    </LinearLayout>


</LinearLayout>