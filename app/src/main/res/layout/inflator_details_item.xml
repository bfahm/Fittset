<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.xencosworks.fittset.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_details_drag"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:padding="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standing Dumbbell Fly"
                    android:textSize="18dp"
                    android:id="@+id/inflator_details_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Routine"
                    android:textSize="14dp"
                    android:textColor="@color/colorActiveTextButtonBlue"
                    android:id="@+id/inflator_details_custom_routine"/>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:text="10KG"
                    android:textSize="14dp"
                    android:background="@drawable/rectangle"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:id="@+id/inflator_details_max_weight"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.5KG"
                    android:textSize="14dp"
                    android:textColor="@color/colorNotSelected"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/inflator_details_last_weight"/>

            </LinearLayout>
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorNewBest"
                android:visibility="invisible"
                android:id="@+id/inflator_details_new_best"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
