<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a muscle group"
        android:textColor="@color/fab_material_white"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/dialog_single_tv"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:layout_below="@+id/dialog_single_tv"
        android:layout_marginTop="24dp"
        android:id="@+id/number_picker_muscles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:np_width="64dp"
        app:np_height="180dp"
        app:np_dividerColor="@color/fab_material_white"
        app:np_selectedTextColor="@color/colorNumberPickerSelected"
        app:np_textColor="@color/fab_material_white"
        app:np_fadingEdgeEnabled="false"
        app:np_dividerThickness="1dp"
        app:np_textSize="20sp"
        app:np_selectedTextSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/number_picker_muscles"
        android:id="@+id/linearLayout">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/fab_material_white"
            android:id="@+id/input_form_dialog_choose_muscle"/>
    </LinearLayout>


</RelativeLayout>